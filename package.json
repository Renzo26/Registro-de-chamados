{
  "name": "registro_chamados_app",
  "version": "1.0.3",
  "description": "Registro de Chamados",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --x64"
  },
  "author": "Arthur Renzo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.arthurrenzo.registrochamados",
    "productName": "Registro de Chamados",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron-builder",
      "!dist/"
    ],
    "extraFiles": [
      {
        "from": "resources/backend.exe",
        "to": "backend.exe"
      },
      {
        "from": "resources/api.exe",
        "to": "api.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
